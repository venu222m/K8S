#Exceed a Container's memory limit
apiVersion: v1
kind: Pod
metadata:
  name: memory-demo-2
spec:
  containers:
  - name: memory-demo-2-ctr
    image: polinux/stress
    resources:
      requests:
        memory: "50Mi"     # Minimum guaranteed memory
      limits:
        memory: "100Mi"    # Hard cap â€” cannot exceed this
    command: ["stress"]
    args: ["--vm", "1", "--vm-bytes", "250M", "--vm-hang", "1"]

    #stress command 250Mi ,it is more than resourse limit then pod not ready

#A Container can exceed its memory request if the Node has memory available. But a Container is not allowed to use more than its memory limit
